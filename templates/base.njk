{% macro pagination(pageNav) %}
{# Refer to interface PageNav in utils.ts for an overview of what a PageNav item contains #}
<nav aria-label="Page navigation" class="d-flex justify-content-center">
	<ul class="pagination">
		{% for pageNavItem in pageNav %}
			<li class="page-item{{ ' active' if pageNavItem.active }}" {{ 'aria-current="page"' if pageNavItem.active }}><a class="page-link" href="?page={{ pageNavItem.num }}">{{ pageNavItem.text }}</a></li>
		{% endfor %}
	</ul>
</nav>
{% endmacro %}
<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
	<meta charset="UTF-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>{{ page_title | e if page_title }}{{ " | " if page_title }}Codam Coalition System</title>
	<meta name="theme-color" content="#6610f2" />

	<!-- dependencies -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link rel="stylesheet" href="/css/bootstrap-overruler.css" />
	<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.4.1/chart.umd.js"></script>
	<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script> <!-- required for bootstrap-autocomplete -->
</head>
<body>
	{% if not noheader %}
	<nav class="navbar navbar-expand-lg bg-body-tertiary">
		<div class="container-fluid">
			<a class="navbar-brand" href="/">
				<img src="/img/logo.png" alt="CODAM" height="24" class="d-inline-block align-text-top" />
				<h4>Coalition System</h4>
			</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNavDropdown">
				<ul class="navbar-nav flex-grow-1">
					<li class="nav-item">
						<a class="nav-link" aria-current="page" href="/">Home</a>
					</li>
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Coalitions
						</a>
						<ul class="dropdown-menu">
							{% for coalition in coalitions %}
								<li><a class="dropdown-item" href="/coalitions/{{ coalition.intra_coalition.id }}"><img src="{{ coalition.intra_coalition.image_url }}" alt="" height="28" style="filter: invert(1);"> {{ coalition.intra_coalition.name | striptags(true) | escape }}</a></li>
							{% endfor %}
						</ul>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/profile/me">Profile</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href="/results">Results</a>
					</li>
					{% if user.isStaff %}
					<li class="nav-item dropdown">
						<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
							Admin
						</a>
						<ul class="dropdown-menu">
							<li><a class="dropdown-item" href="/admin">Dashboard</a></li>
							<li><a class="dropdown-item" href="/admin/points/manual">Assign points manually</a></li>
							<li><a class="dropdown-item" href="/admin/points/automatic">Edit points system</a></li>
							<li><a class="dropdown-item" href="/admin/points/history">Point history</a></li>
							<li><a class="dropdown-item" href="/admin/points/shift">Points shifter</a></li>
							<li><a class="dropdown-item" href="/admin/rankings">Edit rankings system</a></li>
							<li><a class="dropdown-item" href="/admin/titles">Edit titles system</a></li>
							<li><a class="dropdown-item" href="/admin/users">Users overview</a></li>
							<li><a class="dropdown-item" href="/admin/quiz">Questionnaire settings</a></li>
							<li><a class="dropdown-item" href="/admin/coalitions">Coalition settings</a></li>
							<li><a class="dropdown-item" href="/admin/hooks/history">Webhook history</a></li>
							<li><a class="dropdown-item" href="/admin/hooks/catchup">Webhook catch-up</a></li>
							<li><a class="dropdown-item" href="/admin/hooks/secrets">Webhook secrets management</a></li>
						</ul>
					</li>
					{% endif %}
				</ul>
				{% if user.isStaff %}
					<a href="/admin/points/manual" class="btn btn-sm btn-outline-primary me-3">Assign points</a>
				{% endif %}
				<form role="search" method="GET" action="/profile/" id="user-search-form">
					<div class="form-group">
						<input class="form-control me-2" type="search" placeholder="Search user..." aria-label="User search query" id="user-search-input" required />
					</div>
				</form>
				<script>
				function userSearchSetup() {
					const form = document.getElementById('user-search-form');
					const input = document.getElementById('user-search-input');
					if (form && input) {
						form.addEventListener('submit', (event) => {
							if (!input.value) {
								event.preventDefault();
								return false;
							}
							form.action = '/profile/' + encodeURIComponent(input.value);
						});
						$('#user-search-input').autocomplete({
							filter: "/search/profile/autocomplete?q=#QUERY#",
							filterMinChars: 2,
							onPick: function (input, item) {
								window.location.href = '/profile/' + encodeURIComponent(item.innerText);
							}
						});
					}
				}
				document.addEventListener('DOMContentLoaded', userSearchSetup);
				</script>
			</div>
		</div>
	</nav>
	{% endif %}
	<main class="{{ 'm-2 mt-4' if not nomargin }}{{ 'noheader ' if noheader }}">
		{# render Bootstrap alerts first #}
		{% for alert in alerts %}
			<div class="alert alert-{{ alert.type }}" role="alert">
				{{ alert.message }}
			</div>
		{% endfor %}
		{% block content %}{% endblock %}
	</main>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
	<script src="/js/bootstrap-autocomplete/dist/js/bootstrap-autocomplete.min.js"></script>
	<script src="/js/renderjson/renderjson.js"></script>
	<script src="/js/codam-charts.js"></script>
</body>
</html>
